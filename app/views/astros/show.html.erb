            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.astro.pic')%>:
            </span></dt>
            <dd class="well">
              <img src='<%= @astro.pic -%>' style="width:150px;height:150px;"/>
            </dd>
            <dt class="label-change">
            <span class="label-content label-info">日期:</span></dt>
            <dd class="well"><%= @astro.start_date %>至<%= @astro.end_date %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.astro.today_fortune')%>:
            </span></dt>
            <dd class="well">
              <%= t('activerecord.attributes.today_fortune.tdate') %>：<span class="label-content label-info"><strong><%= @astro.today_fortune["tdate"] %></strong></span>
