<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.baijiaxing') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.baijiaxing'), baijiaxings_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Baijiaxing %>
              <%= link_to edit_baijiaxing_path(@baijiaxing), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{baijiaxings_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.baijiaxing.name')%>:
              </span></dt>
              <dd class="well"><%= @baijiaxing.name %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.baijiaxing.author')%>:
              </span></dt>
              <dd class="well"><%= @baijiaxing.author %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.baijiaxing.source')%>:
              </span></dt>
              <dd class="well"><%= raw  @baijiaxing.source %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.baijiaxing.celebrity')%>:
              </span></dt>
              <dd class="well"><%= raw  @baijiaxing.celebrity %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.baijiaxing.distributing')%>:
              </span></dt>
              <dd class="well"><%= raw @baijiaxing.distributing %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
