<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.bencao') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.bencao'), bencaos_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Bencao %>
              <%= link_to edit_bencao_path(@bencao), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{bencaos_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.chapter')%>:</span>
            </dt>
            <dd class="well"><%= @bencao.chapter %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.name')%>:</span>
            </dt>
            <dd class="well"><%= @bencao.name %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.author')%>:</span>
            </dt>
            <dd class="well"><%= @bencao.author %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.content')%>:</span>
            </dt>
            <dd class="well"><%= raw @bencao.content %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.commentary')%>:</span>
            </dt>
            <dd class="well"><%= raw @bencao.commentary %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.translation')%>:</span>
            </dt>
            <dd class="well"><%= raw @bencao.translation %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.appreciation')%>:</span>
            </dt>
            <dd class="well"><%= raw @bencao.appreciation %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.bencao.interpretation')%>:</span>
            </dt>
            <dd class="well"><%= raw @bencao.interpretation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
