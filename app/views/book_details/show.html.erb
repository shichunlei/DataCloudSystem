<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.book_detail') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.book_detail'), book_details_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, BookDetail %>
              <%= link_to edit_book_detail_path(@book_detail), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{book_details_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.book')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.book.name %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.chapter')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.chapter %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.name')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.name %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.author')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.author %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.sid')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.sid %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.category')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.category %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.dynasty')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.dynasty %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.content')%>:</span>
            </dt>
            <dd class="well"><%=  raw @book_detail.content %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.commentary')%>:</span>
            </dt>
            <dd class="well"><%= raw  @book_detail.commentary %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.translation')%>:</span>
            </dt>
            <dd class="well"><%=  raw @book_detail.translation %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.appreciation')%>:</span>
            </dt>
            <dd class="well"><%=  raw @book_detail.appreciation %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.interpretation')%>:</span>
            </dt>
            <dd class="well"><%=  raw @book_detail.interpretation %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.background')%>:</span>
            </dt>
            <dd class="well"><%= raw @book_detail.background %></dd>
            <dt class="label-change">
              <span class="label-content label-info"><%=t('activerecord.attributes.book_detail.tags')%>:</span>
            </dt>
            <dd class="well"><%= @book_detail.tags %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
