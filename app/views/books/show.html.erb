<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.book') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.book'), books_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
              <% if can? :edit, Book %>
                  <%= link_to edit_book_path(@book), :class => 'btn btn-primary' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                  <%=t('views.edit')%>
              <% end %>
            <% end %>          
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.book.name')%>:
              </span>
            </dt>
            <dd class="well"><%= @book.name %></dd>

            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.book.price')%>:
              </span>
            </dt>
            <dd class="well"><%= @book.price %></dd>

            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.book.publish')%>:
              </span>
            </dt>
            <dd class="well"><%= @book.publish %></dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

