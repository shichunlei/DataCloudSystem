<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.car_basic') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.car_basic') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, CarBasic %>
              <%= link_to new_car_basic_path(@car_basic), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.car_basic')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%=t('activerecord.attributes.car_basic.id') -%></th>
                <th><%=t('activerecord.attributes.car_basic.car_model') -%></th>
                <th><%=t('activerecord.attributes.car_basic.price') -%></th>

                <th><%=t('activerecord.attributes.car_basic.saleprice') -%></th>

                <th><%=t('activerecord.attributes.car_basic.warrantypolicy') -%></th>

                <th><%=t('activerecord.attributes.car_basic.vechiletax') -%></th>

                <th><%=t('activerecord.attributes.car_basic.displacement') -%></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @car_basics) do |car_basic| %>
                <td><%= @page = @page + 1   -%></td>

                <td><%= car_basic.car_model.name -%></td>
                <td><%= car_basic.price -%></td>


                <td><%= car_basic.saleprice -%></td>


                <td><%= car_basic.warrantypolicy -%></td>


                <td><%= car_basic.vechiletax -%></td>


                <td><%= car_basic.displacement -%></td>
                <% if can? :read, car_basic %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{car_basic_path(car_basic)}" %></td>
                <% end %>
                <% if can? :edit, car_basic %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_car_basic_path(car_basic) %></td>
                <% end %>
                <% if can? :destroy, car_basic %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), car_basic, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <%= paginate @car_basics %>
</section>
