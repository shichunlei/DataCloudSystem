<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.car_basic') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.car_basic'), car_basics_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, CarBasic %>
              <%= link_to edit_car_basic_path(@car_basic), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{car_basics_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.car_model')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.car_model.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.price')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.price %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.saleprice')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.saleprice %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.warrantypolicy')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.warrantypolicy %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.vechiletax')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.vechiletax %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.displacement')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.displacement %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.gearbox')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.gearbox %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.comfuelconsumption')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.comfuelconsumption %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.userfuelconsumption')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.userfuelconsumption %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.officialaccelerationtime100')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.officialaccelerationtime100 %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.testaccelerationtime100')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.testaccelerationtime100 %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.maxspeed')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.maxspeed %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_basic.seatnum')%>:
            </span></dt>
            <dd class="well"><%= @car_basic.seatnum %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
