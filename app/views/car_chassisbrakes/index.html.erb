<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.car_chassisbrake') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.car_chassisbrake') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, CarChassisbrake %>
              <%= link_to new_car_chassisbrake_path(@car_chassisbrake), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.car_chassisbrake')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%=t('activerecord.attributes.car_chassisbrake.id') -%></th>

                <th><%=t('activerecord.attributes.car_chassisbrake.car_model') -%></th>

                <th><%=t('activerecord.attributes.car_chassisbrake.bodystructure') -%></th>

                <th><%=t('activerecord.attributes.car_chassisbrake.powersteering') -%></th>

                <th><%=t('activerecord.attributes.car_chassisbrake.frontbraketype') -%></th>

                <th><%=t('activerecord.attributes.car_chassisbrake.rearbraketype') -%></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @car_chassisbrakes) do |car_chassisbrake| %>
                <td><%= @page = @page + 1   -%></td>
                <td><%= car_chassisbrake.car_model.name -%></td>
                <td><%= car_chassisbrake.bodystructure -%></td>
                <td><%= car_chassisbrake.powersteering -%></td>
                <td><%= car_chassisbrake.frontbraketype -%></td>
                <td><%= car_chassisbrake.rearbraketype -%></td>
                <% if can? :read, car_chassisbrake %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{car_chassisbrake_path(car_chassisbrake)}" %></td>
                <% end %>
                <% if can? :edit, car_chassisbrake %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_car_chassisbrake_path(car_chassisbrake) %></td>
                <% end %>
                <% if can? :destroy, car_chassisbrake %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), car_chassisbrake, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <%= paginate @car_chassisbrakes %>
</section>
