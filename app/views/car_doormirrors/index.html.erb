<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.car_doormirror') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.car_doormirror') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, CarDoormirror %>
              <%= link_to new_car_doormirror_path(@car_doormirror), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.car_doormirror')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%=t('activerecord.attributes.car_doormirror.id') -%></th>

                <th><%=t('activerecord.attributes.car_doormirror.car_model') -%></th>

                <th><%=t('activerecord.attributes.car_doormirror.openstyle') -%></th>

                <th><%=t('activerecord.attributes.car_doormirror.electricwindow') -%></th>

                <th><%=t('activerecord.attributes.car_doormirror.uvinterceptingglass') -%></th>

                <th><%=t('activerecord.attributes.car_doormirror.privacyglass') -%></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @car_doormirrors) do |car_doormirror| %>
                <td><%= @page = @page + 1   -%></td>
                <td><%= car_doormirror.car_model.name -%></td>
                <td><%= car_doormirror.openstyle -%></td>
                <td><%= car_doormirror.electricwindow -%></td>
                <td><%= car_doormirror.uvinterceptingglass -%></td>
                <td><%= car_doormirror.privacyglass -%></td>
                <% if can? :read, car_doormirror %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{car_doormirror_path(car_doormirror)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, car_doormirror %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_car_doormirror_path(car_doormirror) %></td>
                <% end %>
                <% if can? :destroy, car_doormirror %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), car_doormirror, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <%= paginate @car_doormirrors %>
</section>
