<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.car_model') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.car_model'), car_models_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, CarModel %>
              <%= link_to edit_car_model_path(@car_model), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{car_models_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_type.logo')%>:
            </span></dt>
            <dd class="well">
              <img src='<%= @car_model.logo -%>' style="width:240px;height:150px;"/>
            </dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_model.car_type')%>:
            </span></dt>
            <dd class="well"><%= @car_model.car_type.fullname %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_model.name')%>:
            </span></dt>
            <dd class="well"><%= @car_model.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_model.price')%>:
            </span></dt>
            <dd class="well"><%= @car_model.price %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_model.salestate')%>:
            </span></dt>
            <dd class="well"><%= @car_model.salestate %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_model.yeartype')%>:
            </span></dt>
            <dd class="well"><%= @car_model.yeartype %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_model.productionstate')%>:
            </span></dt>
            <dd class="well"><%= @car_model.productionstate %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.car_model.sizetype')%>:
            </span></dt>
            <dd class="well"><%= @car_model.sizetype %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
