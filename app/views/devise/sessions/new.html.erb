<div class="login-logo">
    <a href="javascript:void(0);" style="color: #444;font-weight: 400;">数据云管理系统</a>
</div><!-- /.login-logo -->
<div class="login-box-body m-t-l">
  <!--<p class="login-box-msg">请输入用户名和密码</p>-->
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p class="error"><%= f.error_notification %></p>
    <div class="form-group has-feedback">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
         <%= f.text_field :email, :class => "form-control", :placeholder => "请输入用户名", required: false, autofocus: false %>
      </div>
    </div>
    <div class="form-group has-feedback">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <%= f.password_field :password, :class => "form-control", :placeholder => "请输入密码", required: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8" style="padding-left: 35px;">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div><!-- /.col -->
      <div class="col-xs-4">
        <input type="submit" name="commit" value="登录" class="btn btn-primary btn-block btn-flat" data-disable-with="登录">
      </div><!-- /.col -->
    </div>
    <p class="notice text-danger"><%= notice %></p>
    <p class="alert text-danger"><%= alert %></p>
  <% end %>
  <!-- </form> -->
<%= render "devise/shared/links" %>
</div>
