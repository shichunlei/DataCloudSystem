<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.gushi') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.gushi'), gushis_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Gushi %>
              <%= link_to edit_gushi_path(@gushi), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{gushis_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.sid')%>:
              </span></dt>
              <dd class="well"><%= raw @gushi.sid %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.name')%>:
              </span></dt>
              <dd class="well"><%= @gushi.name %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.author')%>:
              </span></dt>
              <dd class="well"><%= @gushi.author %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.dynasty')%>:
              </span></dt>
              <dd class="well"><%= @gushi.dynasty %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.mtype')%>:
              </span></dt>
              <dd class="well"><%= @gushi.mtype %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.content')%>:
              </span></dt>
              <dd class="well"><%= raw  @gushi.content %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.translation')%>:
              </span></dt>
              <dd class="well"><%= raw  @gushi.translation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.explanation')%>:
              </span></dt>
              <dd class="well"><%=  raw @gushi.explanation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.appreciation')%>:
              </span></dt>
              <dd class="well"><%= raw @gushi.appreciation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.gushi.tags')%>:
              </span></dt>
              <dd class="well"><%= raw @gushi.tags %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
