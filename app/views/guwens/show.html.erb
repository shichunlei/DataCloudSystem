<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.guwen') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.guwen'), guwens_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Guwen %>
              <%= link_to edit_guwen_path(@guwen), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{guwens_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.sid')%>:
            </span></dt>
            <dd class="well"><%= @guwen.sid %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.name')%>:
            </span></dt>
            <dd class="well"><%= @guwen.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.author')%>:
            </span></dt>
            <dd class="well"><%= @guwen.author %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.dynasty')%>:
            </span></dt>
            <dd class="well"><%= @guwen.dynasty %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.chapter')%>:
            </span></dt>
            <dd class="well"><%= @guwen.chapter %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.content')%>:
            </span></dt>
            <dd class="well"><%= raw  @guwen.content %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.commentary')%>:
            </span></dt>
            <dd class="well"><%=  raw @guwen.commentary %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.appreciation')%>:
            </span></dt>
            <dd class="well"><%= raw  @guwen.appreciation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.translation')%>:
            </span></dt>
            <dd class="well"><%=  raw @guwen.translation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.interpretation')%>:
            </span></dt>
            <dd class="well"><%= raw  @guwen.interpretation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.guwen.tags')%>:
            </span></dt>
            <dd class="well"><%= @guwen.tags %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
