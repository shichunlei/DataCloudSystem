<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.hanshu') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.hanshu'), hanshus_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Hanshu %>
              <%= link_to edit_hanshu_path(@hanshu), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{hanshus_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.name')%>:
              </span></dt>
              <dd class="well"><%= @hanshu.name %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.chapter')%>:
              </span></dt>
              <dd class="well"><%= @hanshu.chapter %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.author')%>:
              </span></dt>
              <dd class="well"><%= @hanshu.author %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.content')%>:
              </span></dt>
              <dd class="well"><%= raw @hanshu.content %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.commentary')%>:
              </span></dt>
              <dd class="well"><%= raw @hanshu.commentary %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.appreciation')%>:
              </span></dt>
              <dd class="well"><%= raw @hanshu.appreciation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.translation')%>:
              </span></dt>
              <dd class="well"><%= raw @hanshu.translation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hanshu.interpretation')%>:
              </span></dt>
              <dd class="well"><%= raw @hanshu.interpretation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
