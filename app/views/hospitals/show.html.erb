              <span class="label-content label-info">
              <%=t('activerecord.attributes.hospital.department_number')%>:
              </span></dt>
              <dd class="well"><%= @hospital.department_number %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.hospital.health_insurance')%>:
              </span></dt>
              <dd class="well"><%= @hospital.health_insurance %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
