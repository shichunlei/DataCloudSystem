<header class="header">
  <a href="/" class="logo">
    <!-- Add the class icon to your logo image or logo icon to add the margining -->
    数据云管理系统
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <div class="navbar-right">
      <ul class="nav navbar-nav">

        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-user"></i>
            <span><%= current_user.name %> <i class="caret"></i></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header bg-light-blue">
              <img src="<%= if current_user.avatar_url.blank?
                  '/img/avatar3.png'
                else
                  current_user.avatar_url
                end
               %>" class="img-circle" alt="User Image" />
              <p>
                <%= current_user.name %>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="col-xs-6 text-center">
                <a href="/users/<%= current_user.id %>">个人信息</a>
              </div>
              <div class="col-xs-6 text-center">
                <a href="/organizations/<%= current_user.organization.id %>">机构信息</a>
              </div>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <!-- <div class="pull-left">
                <a href="#" class="btn btn-default btn-flat">Profile</a>
              </div> -->
              <div class="pull-right">
                <%= link_to "退出登陆", destroy_user_session_path, :method => :delete , :class => 'btn btn-default btn-flat'%>
                <!-- <a href="#" class=""></a> -->
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
