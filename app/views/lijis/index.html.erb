<style media="screen">
  td{
    vertical-align:middle!important;
  }
</style>
<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.liji') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.liji') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, Liji %>
              <%= link_to new_liji_path(@liji), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.liji')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                                <th><%=t('activerecord.attributes.liji.id') -%></th>
                                                <th><%=t('activerecord.attributes.liji.name') -%></th>
                                                                <th><%=t('activerecord.attributes.liji.content') -%></th>
                                                                <th><%=t('activerecord.attributes.liji.commentary') -%></th>
                                                                <th><%=t('activerecord.attributes.liji.translation') -%></th>
                                                                <th><%=t('activerecord.attributes.liji.appreciation') -%></th>
                                                                                  <th></th>
                <th>操作</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @lijis) do |liji| %>
                                <td><%= @page = @page + 1   -%></td>
                                                <td><%= liji.name -%></td>
                                                                <td><%= liji.content -%></td>
                                                                <td><%= liji.commentary -%></td>
                                                                <td><%= liji.translation -%></td>
                                                                <td><%= liji.appreciation -%></td>
                                                                                <% if can? :read, liji %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{liji_path(liji)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, liji %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_liji_path(liji) %></td>
                <% end %>
                <% if can? :destroy, liji %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), liji, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @lijis %>
</section>
