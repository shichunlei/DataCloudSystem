<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.lunyu') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.lunyu'), lunyus_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Lunyu %>
              <%= link_to edit_lunyu_path(@lunyu), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{lunyus_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.lunyu.chapter')%>:
            </span></dt>
            <dd class="well"><%= @lunyu.chapter %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.lunyu.name')%>:
            </span></dt>
            <dd class="well"><%= @lunyu.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.lunyu.content')%>:
            </span></dt>
            <dd class="well"><%= raw @lunyu.content %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.lunyu.commentary')%>:
            </span></dt>
            <dd class="well"><%= raw @lunyu.commentary %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.lunyu.translation')%>:
            </span></dt>
            <dd class="well"><%= raw @lunyu.translation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.lunyu.appreciation')%>:
            </span></dt>
            <dd class="well"><%= raw @lunyu.appreciation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.lunyu.interpretation')%>:
            </span></dt>
            <dd class="well"><%= raw @lunyu.interpretation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
