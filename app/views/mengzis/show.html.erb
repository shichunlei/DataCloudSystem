<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.mengzi') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.mengzi'), mengzis_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Mengzi %>
              <%= link_to edit_mengzi_path(@mengzi), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{mengzis_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.mengzi.chapter')%>:
            </span></dt>
            <dd class="well"><%= @mengzi.chapter %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.mengzi.name')%>:
            </span></dt>
            <dd class="well"><%= @mengzi.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.mengzi.content')%>:
            </span></dt>
            <dd class="well"><%= raw @mengzi.content %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.mengzi.commentary')%>:
            </span></dt>
            <dd class="well"><%= raw @mengzi.commentary %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.mengzi.translation')%>:
            </span></dt>
            <dd class="well"><%= raw @mengzi.translation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.mengzi.appreciation')%>:
            </span></dt>
            <dd class="well"><%= raw @mengzi.appreciation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.mengzi.interpretation')%>:
            </span></dt>
            <dd class="well"><%= raw @mengzi.interpretation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
