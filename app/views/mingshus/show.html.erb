<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.mingshu') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.mingshu'), mingshus_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Mingshu %>
              <%= link_to edit_mingshu_path(@mingshu), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{mingshus_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.name')%>:
              </span></dt>
              <dd class="well"><%= @mingshu.name %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.author')%>:
              </span></dt>
              <dd class="well"><%= @mingshu.author %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.chapter')%>:
              </span></dt>
              <dd class="well"><%= @mingshu.chapter %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.content')%>:
              </span></dt>
              <dd class="well"><%= raw @mingshu.content %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.commentary')%>:
              </span></dt>
              <dd class="well"><%= raw @mingshu.commentary %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.translation')%>:
              </span></dt>
              <dd class="well"><%= raw @mingshu.translation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.appreciation')%>:
              </span></dt>
              <dd class="well"><%= raw @mingshu.appreciation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.mingshu.interpretation')%>:
              </span></dt>
              <dd class="well"><%= raw @mingshu.interpretation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
