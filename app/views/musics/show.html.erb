<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.music') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.music'), musics_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Music %>
              <%= link_to edit_music_path(@music), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{musics_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">

            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.music.name')%>:
              </span>
            </dt>
            <dd class="well">
              <%= @music.name %>
            </dd>


            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.music.audio_url')%>:
              </span>
            </dt>
            <dd class="well">
              <%= @music.audio_url %>
            </dd>


            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.music.artists')%>:
              </span>
            </dt>
            <dd class="well">
              <%= @music.artists %>
            </dd>


            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.music.album_url')%>:
              </span>
            </dt>
            <dd class="well">
              <img src='<%= @music.album_url -%>' style="width:150px;height:150px;"/>
            </dd>


            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.music.lyric')%>:
              </span>
            </dt>
            <dd class="well">
              <%= raw @music.lyric %>
            </dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
