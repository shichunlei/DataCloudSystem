<section class="content invoice" style="overflow:initial;">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@notification, :html => { :role => "form" }) do |f| %>
        <% if @notification.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@notification.errors.count, "error") %> prohibited this notification from being saved:</h4>
            <ul>
            <% @notification.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="form-group">
          <%= f.label :notify_type %>
          <%= f.text_field :notify_type, :class => "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :user %>
          <%= f.text_field :user, :class => "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :from_user %>
          <%= f.text_field :from_user, :class => "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :from_user_name %>
          <%= f.text_field :from_user_name, :class => "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :status %>
          <%= f.text_field :status, :class => "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :reason %>
          <%= f.text_field :reason, :class => "form-control" %>
        </div>

                <div class="form-group">
          <%= f.submit :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
