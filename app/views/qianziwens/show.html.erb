<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.qianziwen') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.qianziwen'), qianziwens_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Qianziwen %>
              <%= link_to edit_qianziwen_path(@qianziwen), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{qianziwens_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.qianziwen.name')%>:
              </span></dt>
              <dd class="well"><%= @qianziwen.name %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.qianziwen.author')%>:
              </span></dt>
              <dd class="well"><%= @qianziwen.author %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.qianziwen.interpretation')%>:
              </span></dt>
              <dd class="well"><%= raw  @qianziwen.interpretation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.qianziwen.content')%>:
              </span></dt>
              <dd class="well"><%= raw  @qianziwen.content %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.qianziwen.commentary')%>:
              </span></dt>
              <dd class="well"><%= raw  @qianziwen.commentary %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.qianziwen.translation')%>:
              </span></dt>
              <dd class="well"><%= raw  @qianziwen.translation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.qianziwen.appreciation')%>:
              </span></dt>
              <dd class="well"><%=  raw @qianziwen.appreciation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
