<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.recipe_material') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.recipe_material'), recipe_materials_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, RecipeMaterial %>
              <%= link_to edit_recipe_material_path(@recipe_material), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{recipe_materials_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.recipe_material.recipe')%>:
            </span></dt>
            <dd class="well"><%= @recipe_material.recipe.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.recipe_material.mname')%>:
            </span></dt>
            <dd class="well"><%= @recipe_material.mname %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.recipe_material.mtype')%>:
            </span></dt>
            <dd class="well"><%= @recipe_material.mtype == 0 ? "辅料" : "主料" %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.recipe_material.amount')%>:
            </span></dt>
            <dd class="well"><%= @recipe_material.amount %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
