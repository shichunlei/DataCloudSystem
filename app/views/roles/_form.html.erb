        <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :display_name %>
        <%= f.text_field :display_name, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :resource %>
        <%= f.text_field :resource, :class => "form-control" %>
      </div>
