<style media="screen">
  td{
    vertical-align:middle!important;
  }
</style>
<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.sanshiliuji') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.sanshiliuji') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, Sanshiliuji %>
              <%= link_to new_sanshiliuji_path(@sanshiliuji), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.sanshiliuji')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                            <th><%=t('activerecord.attributes.sanshiliuji.id') -%></th>

                              <th><%=t('activerecord.attributes.sanshiliuji.name') -%></th>

                              <th><%=t('activerecord.attributes.sanshiliuji.chapter') -%></th>

                              <th><%=t('activerecord.attributes.sanshiliuji.gallery') -%></th>
                                              <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @sanshiliujis) do |sanshiliuji| %>
                                <td><%= @page = @page + 1   -%></td>
                  <td><%= sanshiliuji.name -%></td>
                  <td><%= sanshiliuji.chapter -%></td>
                  <td><img src='<%= sanshiliuji.gallery_url -%>' style="width:150px;height:90px;"/></td>
                                                      <% if can? :read, sanshiliuji %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{sanshiliuji_path(sanshiliuji)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, sanshiliuji %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_sanshiliuji_path(sanshiliuji) %></td>
                <% end %>
                <% if can? :destroy, sanshiliuji %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), sanshiliuji, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <%= paginate @sanshiliujis %>
</section>
