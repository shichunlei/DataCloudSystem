<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.sanzijing') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.sanzijing'), sanzijings_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Sanzijing %>
              <%= link_to edit_sanzijing_path(@sanzijing), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{sanzijings_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.sanzijing.name')%>:
              </span></dt>
              <dd class="well"><%= @sanzijing.name %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.sanzijing.author')%>:
              </span></dt>
              <dd class="well"><%= @sanzijing.author %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.sanzijing.interpretation')%>:
              </span></dt>
              <dd class="well"><%=  raw @sanzijing.interpretation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.sanzijing.content')%>:
              </span></dt>
              <dd class="well"><%= raw  @sanzijing.content %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.sanzijing.commentary')%>:
              </span></dt>
              <dd class="well"><%= raw  @sanzijing.commentary %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.sanzijing.translation')%>:
              </span></dt>
              <dd class="well"><%=  raw @sanzijing.translation %></dd>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.sanzijing.appreciation')%>:
              </span></dt>
              <dd class="well"><%=  raw @sanzijing.appreciation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
