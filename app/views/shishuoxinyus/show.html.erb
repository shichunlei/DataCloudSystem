<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.shishuoxinyu') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.shishuoxinyu'), shishuoxinyus_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Shishuoxinyu %>
              <%= link_to edit_shishuoxinyu_path(@shishuoxinyu), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{shishuoxinyus_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.shishuoxinyu.name')%>:
            </span></dt>
            <dd class="well"><%= @shishuoxinyu.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.shishuoxinyu.content')%>:
            </span></dt>
            <dd class="well"><%=  raw @shishuoxinyu.content %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.shishuoxinyu.commentary')%>:
            </span></dt>
            <dd class="well"><%=  raw @shishuoxinyu.commentary %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.shishuoxinyu.appreciation')%>:
            </span></dt>
            <dd class="well"><%=  raw @shishuoxinyu.appreciation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.shishuoxinyu.translation')%>:
            </span></dt>
            <dd class="well"><%=  raw @shishuoxinyu.translation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.shishuoxinyu.interpretation')%>:
            </span></dt>
            <dd class="well"><%=  raw @shishuoxinyu.interpretation %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
