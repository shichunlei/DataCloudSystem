<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.tiangong') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.tiangong') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, Tiangong %>
              <%= link_to new_tiangong_path(@tiangong), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.tiangong')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%=t('activerecord.attributes.tiangong.id') -%></th>
                <th><%=t('activerecord.attributes.tiangong.name') -%></th>
                <th><%=t('activerecord.attributes.tiangong.chapter') -%></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @tiangongs) do |tiangong| %>
                <td><%= @page = @page + 1   -%></td>
                <td><%= tiangong.name -%></td>
                <td><%= tiangong.chapter -%></td>
                <% if can? :read, tiangong %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{tiangong_path(tiangong)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, tiangong %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_tiangong_path(tiangong) %></td>
                <% end %>
                <% if can? :destroy, tiangong %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), tiangong, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <%= paginate @tiangongs %>
</section>
