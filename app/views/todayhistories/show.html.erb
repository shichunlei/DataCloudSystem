<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.todayhistory') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.todayhistory'), todayhistories_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Todayhistory %>
              <%= link_to edit_todayhistory_path(@todayhistory), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{todayhistories_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.todayhistory.name')%>:
            </span></dt>
            <dd class="well"><%= @todayhistory.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.todayhistory.year')%>:
            </span></dt>
            <dd class="well"><%= @todayhistory.year %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.todayhistory.month')%>:
            </span></dt>
            <dd class="well"><%= @todayhistory.month %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.todayhistory.day')%>:
            </span></dt>
            <dd class="well"><%= @todayhistory.day %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.todayhistory.image')%>:
            </span></dt>
            <dd class="well"><img src='<%= @todayhistory.image -%>' style="width:200px;height:150px;"/></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.todayhistory.content')%>:
            </span></dt>
            <dd class="well"><%= raw @todayhistory.content %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
