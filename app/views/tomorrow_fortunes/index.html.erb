<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.tomorrow_fortune') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.tomorrow_fortune') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, TomorrowFortune %>
              <%= link_to new_tomorrow_fortune_path(@tomorrow_fortune), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.tomorrow_fortune')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                            <th><%=t('activerecord.attributes.tomorrow_fortune.id') -%></th>

                              <th><%=t('activerecord.attributes.tomorrow_fortune.tdate') -%></th>

                              <th><%=t('activerecord.attributes.tomorrow_fortune.love') -%></th>

                              <th><%=t('activerecord.attributes.tomorrow_fortune.health') -%></th>

                              <th><%=t('activerecord.attributes.tomorrow_fortune.career') -%></th>

                              <th><%=t('activerecord.attributes.tomorrow_fortune.color') -%></th>





<th><%=t('activerecord.attributes.tomorrow_fortune.astro') -%></th>
                                              <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @tomorrow_fortunes) do |tomorrow_fortune| %>
                                <td><%= @page = @page + 1   -%></td>


                  <td><%= tomorrow_fortune.tdate -%></td>


                  <td><%= tomorrow_fortune.love -%></td>


                  <td><%= tomorrow_fortune.health -%></td>


                  <td><%= tomorrow_fortune.career -%></td>


                  <td><%= tomorrow_fortune.color -%></td>
<td><%= tomorrow_fortune.astro.name -%></td>
                                                      <% if can? :read, tomorrow_fortune %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{tomorrow_fortune_path(tomorrow_fortune)}" %></td>
                <% end %>
                <% if can? :edit, tomorrow_fortune %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_tomorrow_fortune_path(tomorrow_fortune) %></td>
                <% end %>
                <% if can? :destroy, tomorrow_fortune %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), tomorrow_fortune, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <%= paginate @tomorrow_fortunes %>
</section>
