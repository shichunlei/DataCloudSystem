<section class="content invoice" style="overflow:initial;">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@village, :html => { :role => "form" }) do |f| %>
        <% if @village.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@village.errors.count, "error") %> prohibited this village from being saved:</h4>
            <ul>
            <% @village.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :class => "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :no %>
          <%= f.text_field :no, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :code_no %>
          <%= f.text_field :code_no, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :town %>
          <%= f.text_field :town_id, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
