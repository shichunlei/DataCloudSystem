<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.village') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.village'), villages_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Village %>
              <%= link_to edit_village_path(@village), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{villages_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">

            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.village.name')%>:
              </span>
            </dt>
            <dd class="well">
              <%= @village.name %>
            </dd>


            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.village.no')%>:
              </span>
            </dt>
            <dd class="well">
              <%= @village.no %>
            </dd>

            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.village.code_no')%>:
              </span>
            </dt>
            <dd class="well">
              <%= @village.code_no %>
            </dd>

            <dt class="label-change">
              <span class="label-content label-info">
                <%=t('activerecord.attributes.village.town')%>:
              </span>
            </dt>
            <dd class="well">
              <%= @village.town.name %>
            </dd>

          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
