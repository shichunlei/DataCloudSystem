<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.world_record') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.world_record'), world_records_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <!-- <% if can? :edit, WorldRecord %>
              <%= link_to edit_world_record_path(@world_record), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %> -->

            <%= link_to "#{world_records_path}?page=#{@page}", :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-chevron-left"></span>
              <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <% if !@world_record.pic_url.blank? %>
              <dt class="label-change">
              <span class="label-content label-info">
              <%=t('activerecord.attributes.world_record.pic_url')%>:
              </span></dt>
              <dd class="well">
                <img src='<%= @world_record.pic_url -%>' style="width:240px;height:240px;"/>
              </dd>
            <% end %>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.world_record.name')%>:
            </span></dt>
            <dd class="well"><%= @world_record.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.world_record.category')%>:
            </span></dt>
            <dd class="well"><%= @world_record.category %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.world_record.pic_all_url')%>:
            </span></dt>
            <dd class="well"><%= @world_record.pic_all_url %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.world_record.content')%>:
            </span></dt>
            <dd class="well"><%= raw @world_record.content %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
