<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.year_fortune') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.year_fortune'), year_fortunes_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, YearFortune %>
              <%= link_to edit_year_fortune_path(@year_fortune), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{year_fortunes_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.year_fortune.year')%>:
            </span></dt>
            <dd class="well"><%= @year_fortune.year %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.year_fortune.summary')%>:
            </span></dt>
            <dd class="well"><%= @year_fortune.summary %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.year_fortune.money')%>:
            </span></dt>
            <dd class="well"><%= @year_fortune.money %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.year_fortune.career')%>:
            </span></dt>
            <dd class="well"><%= @year_fortune.career %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.year_fortune.love')%>:
            </span></dt>
            <dd class="well"><%= @year_fortune.love %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.year_fortune.astro')%>:
            </span></dt>
            <dd class="well"><%= @year_fortune.astro.name %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
