<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.show')%> <small><%=t('activerecord.models.yuefu') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li><%= link_to t('activerecord.models.yuefu'), yuefus_path %></li>
      <li class="active"><%=t('views.show')%></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :edit, Yuefu %>
              <%= link_to edit_yuefu_path(@yuefu), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <%=t('views.edit')%>
              <% end %>
            <% end %>

            <%= link_to "#{yuefus_path}?page=#{@page}", :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <%=t('views.return')%>
            <% end %>
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.sid')%>:
            </span></dt>
            <dd class="well"><%= @yuefu.sid %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.name')%>:
            </span></dt>
            <dd class="well"><%= @yuefu.name %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.author')%>:
            </span></dt>
            <dd class="well"><%= @yuefu.author %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.dynasty')%>:
            </span></dt>
            <dd class="well"><%= @yuefu.dynasty %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.chapter')%>:
            </span></dt>
            <dd class="well"><%= @yuefu.chapter %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.content')%>:
            </span></dt>
            <dd class="well"><%=  raw @yuefu.content %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.commentary')%>:
            </span></dt>
            <dd class="well"><%= raw  @yuefu.commentary %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.appreciation')%>:
            </span></dt>
            <dd class="well"><%= raw  @yuefu.appreciation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.translation')%>:
            </span></dt>
            <dd class="well"><%=  raw @yuefu.translation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.interpretation')%>:
            </span></dt>
            <dd class="well"><%= raw @yuefu.interpretation %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.tags')%>:
            </span></dt>
            <dd class="well"><%= @yuefu.tags %></dd>
            <dt class="label-change">
            <span class="label-content label-info">
            <%=t('activerecord.attributes.yuefu.background')%>:
            </span></dt>
            <dd class="well"><%= raw @yuefu.background %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>
