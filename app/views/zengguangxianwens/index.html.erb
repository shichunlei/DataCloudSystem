<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.zengguangxianwen') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.zengguangxianwen') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, Zengguangxianwen %>
              <%= link_to new_zengguangxianwen_path(@zengguangxianwen), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.zengguangxianwen')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                                <th><%=t('activerecord.attributes.zengguangxianwen.id') -%></th>
                                                    <th><%=t('activerecord.attributes.zengguangxianwen.name') -%></th>
                                                                      <th><%=t('activerecord.attributes.zengguangxianwen.chapter') -%></th>
                                                                                                                              <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @zengguangxianwens) do |zengguangxianwen| %>
                                <td><%= @page = @page + 1   -%></td>
                                                    <td><%= zengguangxianwen.name -%></td>
                                                                      <td><%= zengguangxianwen.chapter -%></td>
                                                                                                                              <% if can? :read, zengguangxianwen %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{zengguangxianwen_path(zengguangxianwen)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, zengguangxianwen %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_zengguangxianwen_path(zengguangxianwen) %></td>
                <% end %>
                <% if can? :destroy, zengguangxianwen %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), zengguangxianwen, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @zengguangxianwens %>
</section>
