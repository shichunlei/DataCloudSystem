<style media="screen">
  td{
    vertical-align:middle!important;
  }
</style>
<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.zhouli') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.zhouli') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, Zhouli %>
              <%= link_to new_zhouli_path(@zhouli), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.zhouli')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                                <th><%=t('activerecord.attributes.zhouli.id') -%></th>
                                                <th><%=t('activerecord.attributes.zhouli.chapter') -%></th>
                                                                <th><%=t('activerecord.attributes.zhouli.name') -%></th>
                                                                <th><%=t('activerecord.attributes.zhouli.author') -%></th>
                                                                <th><%=t('activerecord.attributes.zhouli.content') -%></th>
                                                                <th><%=t('activerecord.attributes.zhouli.commentary') -%></th>
                                                                                                                                                      <th></th>
                <th>操作</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @zhoulis) do |zhouli| %>
                                <td><%= @page = @page + 1   -%></td>
                                                <td><%= zhouli.chapter -%></td>
                                                                <td><%= zhouli.name -%></td>
                                                                <td><%= zhouli.author -%></td>
                                                                <td><%= zhouli.content -%></td>
                                                                <td><%= zhouli.commentary -%></td>
                                                                                                                                                <% if can? :read, zhouli %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{zhouli_path(zhouli)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, zhouli %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_zhouli_path(zhouli) %></td>
                <% end %>
                <% if can? :destroy, zhouli %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), zhouli, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @zhoulis %>
</section>
