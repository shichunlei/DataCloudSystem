<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.zhuangzi') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.zhuangzi') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, Zhuangzi %>
              <%= link_to new_zhuangzi_path(@zhuangzi), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.zhuangzi')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%=t('activerecord.attributes.zhuangzi.id') -%></th>
                <th><%=t('activerecord.attributes.zhuangzi.parent_chapter') -%></th>
                <th><%=t('activerecord.attributes.zhuangzi.chapter') -%></th>
                <th><%=t('activerecord.attributes.zhuangzi.name') -%></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 10 -%>
              <%= content_tag_for(:tr, @zhuangzis) do |zhuangzi| %>
                <td><%= @page = @page + 1   -%></td>
                <td><%= zhuangzi.parent_chapter -%></td>
                <td><%= zhuangzi.chapter -%></td>
                <td><%= zhuangzi.name -%></td>
                <% if can? :read, zhuangzi %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{zhuangzi_path(zhuangzi)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, zhuangzi %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_zhuangzi_path(zhuangzi) %></td>
                <% end %>
                <% if can? :destroy, zhuangzi %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), zhuangzi, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <%= paginate @zhuangzis %>
</section>
