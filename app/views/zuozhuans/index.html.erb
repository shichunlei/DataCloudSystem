<% content_for :content_header  do %>
  <section class="content-header">
    <h1><%=t('views.list')%> <small><%= t('activerecord.models.zuozhuan') %></small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> <%=t('views.home')%></a></li>
      <li class="active"><%= t('activerecord.models.zuozhuan') %></li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <% if can? :create, Zuozhuan %>
              <%= link_to new_zuozhuan_path(@zuozhuan), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                <%=t('views.create')%><%=t('activerecord.models.zuozhuan')%>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                                <th><%=t('activerecord.attributes.zuozhuan.id') -%></th>
                                                    <th><%=t('activerecord.attributes.zuozhuan.name') -%></th>
                                                                      <th><%=t('activerecord.attributes.zuozhuan.chapter') -%></th>
                                                                      <th><%=t('activerecord.attributes.zuozhuan.author') -%></th>
                                                                                                                                                                    <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% current_page = @page.nil? ? 1 : @page -%>
              <% @page = @page.nil? ? 0 : (@page.to_i - 1) * 30 -%>
              <%= content_tag_for(:tr, @zuozhuans) do |zuozhuan| %>
                                <td><%= @page = @page + 1   -%></td>
                                                    <td><%= zuozhuan.name -%></td>
                                                                      <td><%= zuozhuan.chapter -%></td>
                                                                      <td><%= zuozhuan.author -%></td>
                                                                                                                                                                    <% if can? :read, zuozhuan %>
                  <td class="list-opertion"><%= link_to t('views.show'), "#{zuozhuan_path(zuozhuan)}?page=#{current_page}" %></td>
                <% end %>
                <% if can? :edit, zuozhuan %>
                  <td class="list-opertion"><%= link_to t('views.edit'), edit_zuozhuan_path(zuozhuan) %></td>
                <% end %>
                <% if can? :destroy, zuozhuan %>
                  <td class="list-opertion"><%= link_to t('views.destroy'), zuozhuan, method: :delete, data: { confirm: t('views.confirm') } %></td>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= paginate @zuozhuans %>
</section>
